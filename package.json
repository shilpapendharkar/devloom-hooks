  },
  "bugs": {
    "url": "https://github.com/shilpapendharkar/devloom-hooks/issues"
  },
  "homepage": "https://github.com/shilpapendharkar/devloom-hooks#readme",
  "peerDependencies": {
    "react": ">=18"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "@types/react": "^18.0.0"
  }
}
